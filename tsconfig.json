{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"rootDir": "./server",    // change according to your project
		"moduleResolution": "node",
		"outDir": "./server/lib",   // change according to your project
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["./server"],    // change according to your project
	"exclude": ["node_modules, client"]   // change according to your project
}
